{
	"info": {
		"_postman_id": "f3e2c8c7-bcb6-4c95-a903-d46f73ee9f07",
		"name": "Data Validation Test Suite",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Update an employee record",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "031d52e5-707d-45f4-b900-79bc357e7e75",
						"exec": [
							"pm.response.headers.all()\r",
							"    .filter(headerObj => { return headerObj.key == \"Set-Cookie\";})\r",
							"    .forEach(headerObj => {\r",
							"        console.log(headerObj.key +\": \"+headerObj.value)\r",
							"    })"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "67a87331-ac4d-404e-b3b3-934b466ce015",
						"exec": [
							"pm.request.headers.add({\r",
							"key: 'Cookie',\r",
							"value: 'PHPSESSID=c7962e05472acf6fd53fd4cae2c25289'\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "PHPSESSID",
						"value": "c7962e05472acf6fd53fd4cae2c25289",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"{{name}}\",\r\n    \"salary\": \"{{salary}}\",\r\n    \"age\": \"{{age}}\"\r\n}",
					"options": {
						"raw": {}
					}
				},
				"url": {
					"raw": "{{url}}update/21",
					"host": [
						"{{url}}update"
					],
					"path": [
						"21"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get a single employee data",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "0b8a7166-e255-4804-92ef-96aea5d5d86e",
						"exec": [
							"pm.test(\"Successfully validated data after update\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(pm.environment.get(\"name\"));\r",
							"    pm.expect(pm.response.text()).to.include(pm.environment.get(\"salary\"));\r",
							"    pm.expect(pm.response.text()).to.include(pm.environment.get(\"age\"));\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "91738a49-56b0-4294-b7f0-40960b4cd051",
						"exec": [
							"pm.request.headers.add({\r",
							"key: 'Cookie',\r",
							"value: 'PHPSESSID=c7962e05472acf6fd53fd4cae2c25289'\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{url}}employee/21",
					"host": [
						"{{url}}employee"
					],
					"path": [
						"21"
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
